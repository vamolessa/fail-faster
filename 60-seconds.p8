---------------- map

function load_map(l)
	fade(0)

	if l>map_count then
		level=0
		return
	end

	level=l
	cur_map=scan_map(l)

	reset_player(player,l)
end

function scan_map(l)
	local m=maps[l]
	if m then
		return m
	end

	m={
		player={x=0,y=0},
	}

	local oi,oj=map_offset(l,0,0)

	for i=0,16 do
		for j=0,16 do
			local x=oi+i
			local y=oj+j
			local mi=mget(x,y)

			if mi==1 then -- player
				mset(x,y,0)
				m.player={x=i*8,y=j*8}
			end
		end
	end

	maps[l]=m
	return m
end

function map_offset(l,i,j)
	return i+l*16,j
end

function draw_map(l)
	local i,j=map_offset(l,0,0)
	map(i,j,0,0,16,16)
end

---------------- camera

function begin_shake()
	shake_timer=shake_time
end

function update_shake()
	if shake_timer==1 then
		camera()
	end

	shake_timer-=1
	if shake_timer>0 then
		local f=shake_force
		local x=rnd(f)-f/2
		local y=rnd(f)-f/2
		camera(flr(x),flr(y))
	end
end

---------------- helpers

function round(x)
	return flr(x+0.5)
end

function fade(fa)
	fa=max(min(1,fa),0)

	local fn=8
	local pn=15
	local fc=1/fn
	local fi=flr(fa/fc)+1

	for n=1,pn do
		pal(n,fades[n][fi],0)
	end
end

